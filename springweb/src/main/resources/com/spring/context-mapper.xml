<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- SqlSession setup for MyBatis Database Layer -->
	<bean id="sqlSession" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="configLocation" value="classpath:/com/sqlmap/sql-mapper-config.xml" />
		<property name="mapperLocations" value="classpath:/com/sqlmap/mappers/**/*.xml" />
	</bean>


	<!-- MapperConfigurer setup for MyBatis Database Layer with @Mapper("deptMapper") in DeptMapper Interface -->
	<!--
		basePackage가 1나 이상인 경우 CONFIG_LOCATION_DELIMITERS = ",; \t\n";
	-->
	 <bean class="com.springweb.framework.dataaccess.mapper.MapperConfigurer">
		<property name="basePackage" value="com.springweb.**.service.mapper;com.springweb.batch.**.mapper" />
	</bean>

</beans>