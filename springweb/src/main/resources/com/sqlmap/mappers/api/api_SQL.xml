<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springweb.api.service.mapper.ApiMapper">


	<select id="selApiData" parameterType="java.util.Map" resultType="com.springweb.api.model.EmpVO">
		SELECT	EMPNO
				,EMPNO_NM
				,DEPT_CD
				,DEPT_NM
				,PAY_AMT
		FROM	EMPLOYEE
		<if test="EMPNO != null and EMPNO != ''">
		WHERE	EMPNO = #{EMPNO}
		</if>
	</select>


	<insert id="insApiData" parameterType="java.util.Map">
		INSERT INTO EMPLOYEE
		(
			EMPNO
			,EMPNO_NM
			,DEPT_CD
			,DEPT_NM
			,PAY_AMT
		)
		VALUES
		(
			#{EMPNO}
			,#{EMPNO_NM}
			,#{DEPT_CD}
			,#{DEPT_NM}
			,#{PAY_AMT}
		)
	</insert>

	<update id="updApiData" parameterType="java.util.Map">
		UPDATE	EMPLOYEE
		SET		DEPT_CD = #{DEPT_CD}
				,DEPT_NM = #{DEPT_NM}
				,PAY_AMT = #{PAY_AMT}
		WHERE	EMPNO = #{EMPNO}

	</update>

	<delete id="delApiData" parameterType="java.util.Map">
		DELETE FROM EMPLOYEE
		WHERE EMPNO = #{EMPNO}
	</delete>




</mapper>